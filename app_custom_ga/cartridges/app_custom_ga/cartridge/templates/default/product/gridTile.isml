<isset name="showQuickView" value="${true}" scope="page" />
<isset name="product" value="${pdict.product}" scope="page" />
<div class="product"
    data-pid="${product.id}"
    data-itemlistid="${product.gtmItemList.item_list_id}"
    data-itemlistname="${product.gtmItemList.item_list_name}"
    data-gtmga4data="${JSON.stringify(product.gtmGA4Data)}">
    <isinclude template="product/productTile" />
</div>
